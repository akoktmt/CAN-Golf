typedef struct  {
	uint8_t FlagIndex;
    union {
        struct {
           uint16_t flagNodeObSensor8 : 1;
           uint16_t flagNodeObSensor7 : 1;
           uint16_t flagNodeObSensor6 : 1;
           uint16_t flagNodeObSensor5 : 1;
           uint16_t flagNodeObSensor4 : 1;
           uint16_t flagNodeObSensor3 : 1;
           uint16_t flagNodeObSensor2 : 1;
           uint16_t flagNodeObSensor1 : 1;
           uint16_t flagNodePower: 1;
           uint16_t flagNodeMaster : 1;
           uint16_t flagNodeSteering : 1;
           uint16_t flagNodeLigSpeGPS : 1;
           uint16_t flagNodeEngine : 1;

        }Bits;
           uint16_t flags;
    };
}FlagsDataHandle;

typedef struct
{
	uint8_t ID;
	uint8_t NodeBuffer[8][8];
	uint8_t FlagNode[8];
	uint8_t NodeIndex;
	uint8_t CheckFrameType;
	uint8_t PacketLength;
	uint8_t NumberOfFrame;
	uint8_t CRCValue;
	uint8_t FrameType;
	uint8_t NumberOfFlags;
	uint8_t FlagCheckOk;
}NodeBufferHandle;



